@model List<Asignatura>

@{
    string WindowName = "Asignaturas";
    ViewData["Title"] = "Informaci√≥n " + WindowName;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">
                @WindowName
            </h1>
        </div>
        <div class="col-12">
            <div class="object-container">
                @foreach(Asignatura asignatura in Model)
                {
                    <a asp-controller="Asignatura" asp-action="Single" asp-route-id="@asignatura.Id">
                        <div class="object">
                            <h3>@asignatura.Nombre</h3>
                            <address>
                                <partial name="Objeto" model="asignatura" />
                            </address>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>

